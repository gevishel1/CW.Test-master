<Page
    x:Class="CW.Test.View.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CW.Test.View.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image
            Grid.RowSpan="3"
            Margin="0,0,-30,0"
            Source="/Images/uu.jpg"
            Stretch="UniformToFill" />

        <Border
            Grid.Row="0"
            Width="500"
            Height="100"
            Background="#FF000082"
            CornerRadius="15"
            Effect="{StaticResource MaterialDesignElevationShadow1}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Курсовая работа" />
        </Border>

        <Border
            Grid.Row="1"
            Width="700"
            Height="100"
            Background="#FF000082"
            CornerRadius="15"
            Effect="{StaticResource MaterialDesignElevationShadow1}">
            <StackPanel Margin="10,5,0,0">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="30"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="по дисциплине:" />
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="30"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Основы алгоритмизации и программирования" />
            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button
                x:Name="BtnTask"
                Height="60"
                materialDesign:ButtonProgressAssist.IndicatorForeground="white"
                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                materialDesign:ButtonProgressAssist.Value="-1"
                Background="#FF000082"
                Click="BtnTask_Click"
                Foreground="White"
                Style="{StaticResource MaterialDesignRaisedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Kind="TaskAuto" />
                    <TextBlock Text="Перейти к заданиям" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
